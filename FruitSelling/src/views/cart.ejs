<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Cart | Grocery Mart</title>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="76x76" href="./assets/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="./assets/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="./assets/favicon/favicon-16x16.png" />
    <link rel="manifest" href="./assets/favicon/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Fonts -->
    <link rel="stylesheet" href="./assets/fonts/stylesheet.css" />

    <!-- Styles -->
    <link rel="stylesheet" href="./assets/css/main.css" />

    <!-- Scripts -->
    <script src="./assets/js/scripts.js"></script>
    <script src="./assets/js/addToCart.js"></script>
    <script src="./nodejs/src/controllers/homeController.js"></script>

</head>

<body>
    <!-- Header -->
    <header id="header" class="header"></header>
    <script>
        load("#header", "./templates/header-logined.ejs");
    </script>

    <!-- MAIN -->
    <main class="cart-page">
        <div class="container">
            <!-- Cart content -->
            <div class="cart-container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="cart-title">Your Shopping Cart</h1>
                        <p class="cart-description">
                            Review your cart items before proceeding to checkout.
                        </p>
                    </div>
                </div>

                <!-- Cart item 1 -->
                <article class="cart-item" data-price="47.00" data-item="item-1">
                    <a href="./product-detail">
                        <img src="./assets/img/product/item-1.png"
                            alt="Coffee Beans - Espresso Arabica and Robusta Beans" class="cart-item__thumb" />
                    </a>
                    <div class="cart-item__content" name="1">
                        <div class="cart-item__content-left">
                            <h3 class="cart-item__title">
                                <a href="./product-detail">
                                    Coffee Beans - Espresso Arabica and Robusta Beans
                                </a>
                            </h3>
                            <p class="cart-item__price-wrap">
                                $47.00 | <span class="cart-item__status">In Stock</span>
                            </p>
                            <div class="cart-item__ctrl cart-item__ctrl--md-block">
                                <!-- Quantity control -->
                                <div class="cart-item__input">
                                    <button class="cart-item__input-btn decrease" data-item="item-1">
                                        <img class="icon" src="./assets/icons/minus.svg" alt="" />
                                    </button>
                                    <span class="quantity" id="quantity-item-1" name="quantity1">1</span>
                                    <button class="cart-item__input-btn increase" data-item="item-1">
                                        <img class="icon" src="./assets/icons/plus.svg" alt="" />
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="cart-item__content-right">
                            <p class="cart-item__total-price" id="total-price-item-1">$47.00</p>
                            <div class="cart-item__ctrl">
                                <!-- Remove button -->
                                <button class="cart-item__ctrl-btn remove-item" data-item="item-1">
                                    <img src="./assets/icons/trash.svg" alt="Remove item" />
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>
                </article>

                <!-- Cart item 2 -->
                <article class="cart-item" data-price="53.00" data-item="item-2">
                    <a href="./product-detail">
                        <img src="./assets/img/product/item-2.png" alt="Lavazza Coffee Blends"
                            class="cart-item__thumb" />
                    </a>
                    <div class="cart-item__content" name="2">
                        <div class="cart-item__content-left">
                            <h3 class="cart-item__title">
                                <a href="./product-detail">
                                    Lavazza Coffee Blends - Try the Italian Espresso
                                </a>
                            </h3>
                            <p class="cart-item__price-wrap">
                                $53.00 | <span class="cart-item__status">In Stock</span>
                            </p>
                            <div class="cart-item__ctrl cart-item__ctrl--md-block">
                                <!-- Quantity control -->
                                <div class="cart-item__input">
                                    <button class="cart-item__input-btn decrease" data-item="item-2">
                                        <img class="icon" src="./assets/icons/minus.svg" alt="" />
                                    </button>
                                    <span class="quantity" id="quantity-item-2">1</span>
                                    <button class="cart-item__input-btn increase" data-item="item-2">
                                        <img class="icon" src="./assets/icons/plus.svg" alt="" />
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="cart-item__content-right">
                            <p class="cart-item__total-price" id="total-price-item-2">$53.00</p>
                            <div class="cart-item__ctrl">
                                <!-- Remove button -->
                                <button class="cart-item__ctrl-btn remove-item" data-item="item-2">
                                    <img src="./assets/icons/trash.svg" alt="Remove item" />
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>
                </article>

            </div>
        </div>
        </div>

        <!-- Cart summary -->
        <form action="./checkout" id="checkout" method="post">
            <div class="row">
                <div class="col-12" name="total" value="999">
                    <div class="cart-summary">
                        <div class="cart-summary__row">
                            <span>Subtotal:</span>
                            <span id="subtotal">$100.00</span>
                        </div>
                        <div class="cart-summary__row">
                            <span>Shipping:</span>
                            <span>$10.00</span>
                        </div>
                        <div class="cart-summary__separate"></div>
                        <div class="cart-summary__row cart-summary__row--bold">
                            <span>Total:</span>
                            <span id="total">$100.00</span>
                        </div>
                        <a href="./checkout" class="cart-summary__next-btn btn btn--primary btn--rounded">
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </form>
        </div>
        </div>
    </main>

    <!-- Footer -->
    <footer id="footer" class="footer"></footer>
    <script>
        load("#footer", "./templates/footer.ejs");
    </script>

    <!-- Modal: confirm remove shopping cart item -->
    <div id="delete-confirm" class="modal modal--small hide">
        <div class="modal__content">
            <p class="modal__text">Do you want to remove this item from your cart?</p>
            <div class="modal__bottom">
                <button class="btn btn--small btn--outline modal__btn js-toggle" toggle-target="#delete-confirm">
                    Cancel
                </button>
                <button class="btn btn--small btn--danger btn--primary modal__btn btn--no-margin js-toggle"
                    toggle-target="#delete-confirm">
                    Remove
                </button>
            </div>
        </div>
        <div class="modal__overlay js-toggle" toggle-target="#delete-confirm"></div>
    </div>
</body>
</html>
